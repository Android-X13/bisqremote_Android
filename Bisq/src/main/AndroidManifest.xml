<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joachimneumann.bisq">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BisqMaterialTheme">
        <activity android:name=".ActivityWelcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ActivityRegisterInstructions">
        </activity>
        <activity android:name=".ActivityRegister">
        </activity>
        <activity android:name=".ActivityEmail">
        </activity>
        <activity android:name=".ActivityQR">
        </activity>
        <activity android:name=".ActivitySettings">
        </activity>
        <activity android:name=".NotificationTable">
        </activity>

        <service
            android:name=".BisqFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".BisqFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>




    </application>

</manifest>